<!DOCTYPE html>
<html lang="en">
<head>
    <title>Questions</title>
    <style>
        body{
            background-color: rgba(52,53,65);
        }

        hr{
            border-color: black;
        }
        
        /* CSS styles for the questions container */
        #questions-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            
        }
        
        /* CSS styles for each question */
        .question {
            background-color: #9b9b7a;
            width: 80%;
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
        }
        
        /* CSS styles for the question title */
        .question h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }
        
        /* CSS styles for the question description */
        .question p {
            font-size: 18px;
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div id="questions-container">
        <% questions.forEach(question => { %>
            <div class="question">
                <h2><%= question.title %></h2><hr>
                <p><%= question.description %></p>
            </div>
        <% }); %>
    </div>
</body>
</html>
